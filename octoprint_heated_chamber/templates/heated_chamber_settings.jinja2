<form class="form-horizontal">
	<div class="control-group">
		<legend>General options</legend>
		<label class="control-label">Frequency (0.5 - 25)</label>
		<div class="controls">
    	<span class="input-append">
			  <input type="number" step="0.1" min="0.5" max="25" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.frequency">
				<span class="add-on">s</span>
			</span>
		</div>
		<br>
    <label class="control-label">Temperature threshold (0 - 10)</label>
		<div class="controls">
      <span class="input-append">
			  <input type="number" step="0.1" min="0" max="10" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.temperature_threshold">
        <span class="add-on">&#8451;</span>
      </span>
    </div>
		<br>
	</div>

  <div class="control-group">
    <legend>PID algorithm</legend>

    <label class="control-label">Components</label>
		<div class="controls">
      <span class="input-append">
        <input type="number" step="0.1" max="0" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.pid.kp">
        <span class="add-on">kp</span>
      </span>
      <span class="input-append">
        <input type="number" step="0.1" max="0" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.pid.kd">
        <span class="add-on">kd</span>
      </span>
      <span class="input-append">
        <input type="number" step="0.1" max="0" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.pid.ki">
        <span class="add-on">ki</span>
      </span>
    </div>
		<br>
    <label class="control-label">Sample time</label>
		<div class="controls">
      <span class="input-append">
			  <input type="number" step="0.1" max="0" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.pid.sample_time">
				<span class="add-on">s</span>
			</span>
    </div>
  </div>

  <div class="control-group">
    <legend>DS18B20 temperature sensor</legend>
		<label class="control-label">Frequency (0.5 - 5)s</label>
		<div class="controls">
      <span class="input-append">
			  <input type="number" step="0.1" min="0.5" max="5" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.temperature_sensor.ds18b20.frequency">
				<span class="add-on">s</span>
			</span>
    </div>
		<br>
    <label class="control-label">Device ID (28-*)</label>
    <div class="controls">
      <input class="input" data-bind="value: settings.plugins.heated_chamber.temperature_sensor.ds18b20.device_id">
      <span class="help-inline">The device id, can be found via ls -la /sys/bus/w1/devices/28-*</span>
    </div>
  </div>

  <div class="control-group">
    <legend>PWM fan</legend>
		<label class="control-label">PWM Pin</label>
		<div class="controls">
			<input type="number" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.fan.pwm.pin">
		</div>
		<br>

		<label class="control-label">PWM Frequency (Hz)</label>
		<div class="controls">
      <span class="input-append">
			  <input type="number" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.fan.pwm.frequency">
      	<span class="add-on">Hz</span>
			</span>
		</div>
		<br>

		<label class="control-label">Idle power (0-100)</label>
		<div class="controls">
			<input type="number" step="1" min="0" max="100" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.fan.pwm.idle_power">
		</div>
		<br>
  </div>

   <div class="control-group">
    <legend>Relay heater</legend>

    <label class="control-label">Pin</label>
		<div class="controls">
			<input type="number" class="input-mini text-right" data-bind="value: settings.plugins.heated_chamber.heater.relay.pin">
		</div>
		<br>

    <label class="control-label">Relay mode</label>
		<div class="controls">
      <select data-bind="value: settings.plugins.heated_chamber.heater.relay.relay_mode" class="input-medium" title="Relay mode">
        <option value="0">Active low</option>
        <option value="1">Active high</option>
      </select>
		</div>
		<br>
  </div>
</form>